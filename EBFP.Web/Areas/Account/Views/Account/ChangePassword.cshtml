@model EBFP.BL.HumanResources.UserModel

@{
    ViewBag.Title = "Change Password <i class=\"ti -lock\"></i>";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(a => Model.sEmp_Id)
    <div class="row white-box">
        <div class="col-sm-6 col-xs-12 "> 
                <div class="form-horizontal">

                    <div class="form-group">
                        <div class="col-md-4">
                            <label class="control-label">Password</label>
                        </div>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.Password, new { @maxlength = "20", @class = "form-control", @readonly = true }) 
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4">
                            <label class="control-label">New Password</label>
                        </div>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.NewPassword, new { @maxlength = "20", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.NewPassword, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4">
                            <label class="control-label">Confirm Password</label>
                        </div>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.ConfirmNewPassword, new { @maxlength = "20", @class = "form-control"})
                            @Html.ValidationMessageFor(model => model.ConfirmNewPassword, "Field is required.", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-rounded waves-effect waves-light m-r-10"><i class="fa fa-check"></i> Submit</button>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xs-12">
                <div class="form-horizontal"></div>
            </div> 
    </div>
}