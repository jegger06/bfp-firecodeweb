@using MVC.Series.Web.Extensions
@model EBFP.BL.HumanResources.EmployeeChildModel
@using (Html.BeginCollectionItem("EmployeeChildren"))
{
    string formID = "HRISECB_" + Guid.NewGuid().ToString().Replace("-", "");
    <div class="form-group" id="@formID">
        <div class="col-xs-6">
            @Html.HiddenFor(m => @Model.EC_Id, new { @class = "form-control" })
            @Html.HiddenFor(m => @Model.EC_Emp_Id, new { @class = "form-control" })
            @Html.TextBoxFor(m => @Model.EC_FullName, new { @class = "form-control",@required="required" })
            @Html.ValidationMessageFor(m => @Model.EC_FullName, "Field is required.", new { @maxlength = "200", @class = "text-danger" })
        </div>
        <div class="col-xs-4 dateContainer">
            <div class="input-group input-append date" id="dueDatePicker">
                <div class="input-group">
                    @Html.TextBoxFor(model => model.EC_BirthDate, "{0:MM/dd/yyyy}", new { @class = "form-control mydatepicker", @placeholder = "mm/dd/yyyy" })
                    <span class="input-group-addon"><i class="icon-calender"></i></span>
                </div>
                @Html.ValidationMessageFor(m => @Model.EC_BirthDate, "Field is required.", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-xs-1"> 
            <button type="button" class="btn btn-danger removeItem btn-circle UserAccessCanEdit" id="@formID" name="@formID" data-bind="@formID"><i class="fa fa-times UserViewing"></i> </button>
        </div>
    </div>
    <script type="text/javascript">

        $(document).ready(function () {
            $("#@formID:last .removeItem").click(function () {
                $("#" + $(this).data().bind).remove();
            });
        });
    </script>

}