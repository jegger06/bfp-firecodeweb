@model EBFP.BL.HumanResources.EmployeeModel

<div class="form-horizontal">
    <div class="form-group">
        <div class="row">
            <label class="control-label">&nbsp;</label>
        </div>
        <div class="row"> 
            <label class="control-label">MEMBERSHIP IN ASSOCIATION/ORGANIZATION</label>
        </div>
        <div class="row">
            <button type="button" id="NewMemInAssociationOrg" name="NewMemInAssociationOrg" class="btn btn-success btn-rounded waves-effect waves-light m-r-10 UserAccessCanEdit UserViewing"><i class="fa fa-plus"></i></button>
        </div>
        <div class="row">
            <div id="MembershipInAssociationOrganizations">
                @if (@Model.MembershipInAssociationOrganizations != null)
            {
                for (int i = 0; i < @Model.MembershipInAssociationOrganizations.Count(); i++)
                {
                        @Html.Partial("~/Areas/HRIS/Views/Employee/Include/EmployeeDetails/OtherInformation/MemInAssociationOrg/Editor.cshtml", @Model.MembershipInAssociationOrganizations[i])
                    }
                }
            </div>

        </div>
    </div>


</div>
<div style="overflow:hidden !important; padding:10px !important">
    &nbsp;
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var formCtr = 1;
        $('.mydatepicker, #datepicker').datepicker();
        $("#NewMemInAssociationOrg").click(function () {
            $.ajax({
                async: false,
                url: '/HRIS/Employee/MemInAssociationOrgEditor'
            }).success(function (partialView) {
                $(partialView).appendTo("#MembershipInAssociationOrganizations");
                $('.mydatepicker, #datepicker').datepicker();
            });
        });
    });
</script>
