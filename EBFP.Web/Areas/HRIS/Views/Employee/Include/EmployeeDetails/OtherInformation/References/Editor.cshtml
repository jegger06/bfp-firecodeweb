

@using MVC.Series.Web.Extensions
@model EBFP.BL.HumanResources.ReferenceModel
@using (Html.BeginCollectionItem("References"))
{
    string formID = "HRISREFER_" + Guid.NewGuid().ToString().Replace("-", "");
    <div class="divTableRow" id="@formID">
        @Html.HiddenFor(m => @Model.ER_Emp_Id, new { @class = "form-control" })
        @Html.HiddenFor(m => @Model.ER_Id, new { @class = "form-control" })
        <div class="divTableCell">@Html.TextBoxFor(m => @Model.ER_FullName, new { @maxlength = "150", @class = "form-control", @required = "required" })</div>
        <div class="divTableCell">@Html.TextBoxFor(m => @Model.ER_Address, new { @maxlength = "150", @class = "form-control", @required = "required" })</div> 
        <div class="divTableCell">@Html.TextBoxFor(m => @Model.ER_PhoneNumber, new { @maxlength = "50", @class = "form-control" })</div> 
        <div class="divTableCell">
            <button type="button" class="btn btn-danger removeItem btn-circle UserAccessCanEdit" id="@formID" name="@formID" data-bind="@formID"><i class="fa fa-times"></i> </button> 
        </div>

    </div>
    <script type="text/javascript">

        $(document).ready(function () {
            $("#@formID .removeItem").click(function () {
                $("#" + $(this).data().bind).remove();
            });
        });
    </script>
}
