
@using MVC.Series.Web.Extensions
@model EBFP.BL.HumanResources.SpecialSkillsHobbyModel
@using (Html.BeginCollectionItem("SpecialSkillsHobbies"))
{
    string formID = "HRISSSH_" + Guid.NewGuid().ToString().Replace("-", "");

    <div class="form-group" id="@formID">
        @Html.HiddenFor(m => @Model.ESSH_Emp_Id, new { @class = "form-control" })
        @Html.HiddenFor(m => @Model.ESSH_Id, new { @class = "form-control" })
        <div class="col-xs-6">
            @Html.TextBoxFor(m => Model.ESSH_Title, new { @maxlength = "200", @class = "form-control", @required = "required" })
        </div>
        <div class="col-xs-1"> 
            <button type="button" class="btn btn-danger removeItem btn-circle UserAccessCanEdit" id="@formID" name="@formID" data-bind="@formID"><i class="fa fa-times"></i> </button> 
        </div>
    </div>
    <script type="text/javascript">

        $(document).ready(function () {
            $("#@formID .removeItem").click(function () {
                $("#" + $(this).data().bind).remove();
            });
        });
    </script>
}
