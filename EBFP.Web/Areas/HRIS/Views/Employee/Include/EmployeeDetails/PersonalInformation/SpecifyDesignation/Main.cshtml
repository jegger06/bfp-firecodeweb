@model EBFP.BL.HumanResources.EmployeeModel

<div class="form-horizontal">
    <div class="form-group">

        @*<div class="row"> 
            <label class="control-label">&nbsp;</label>
        </div>*@
        @*<div class="row"> <label class="control-label">SPECIFY DESIGNATION:</label>
        </div>*@
        <div class="row"> 
            <button type="button" id="NewSpecifyDesignation" name="NewSpecifyDesignation" class="btn btn-success btn-rounded waves-effect waves-light m-r-10 UserAccessCanEdit UserViewing"><i class="fa fa-plus"></i></button>
        </div>
        <div id="SpecifyDesignation" class="row" style="margin-top:10px">
            @if (@Model.SpecifyDesignation != null)
            {
                for (int i = 0; i < @Model.SpecifyDesignation.Count(); i++)
                {
                    @Html.Partial("~/Areas/HRIS/Views/Employee/Include/EmployeeDetails/PersonalInformation/SpecifyDesignation/Editor.cshtml", @Model.SpecifyDesignation[i])
                }
            }
        </div>
    </div>

</div>
<div style="overflow:hidden !important; padding:10px !important">
    &nbsp;
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var formCtr = 1;
        $('.mydatepicker, #datepicker').datepicker();
        $("#NewSpecifyDesignation").click(function () {
            $.ajax({
                async: false,
                url: '/HRIS/Employee/SpecifyDesignationEditor'
            }).success(function (partialView) {
              $(partialView).appendTo("#SpecifyDesignation");
                $('.mydatepicker, #datepicker').datepicker();
            });
        });
    });
</script>
