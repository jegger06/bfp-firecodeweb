
@using MVC.Series.Web.Extensions
@model EBFP.BL.HumanResources.HealthRecordModel
@using EBFP.BL.Helper;

@using (Html.BeginCollectionItem("HealthRecord"))
{
    string formID = "HRISEB_" + Guid.NewGuid().ToString().Replace("-", "");
    <div class="divTableRow" id="@formID">
        @Html.HiddenFor(m => @Model.HR_Id, new { @class = "form-control" })
        <div class="divTableCell">
            @Html.TextBoxFor(model => model.HR_Date, "{0:MM/dd/yyyy}", new { @class = "form-control mydatepicker", @placeholder = "mm/dd/yyyy" })
        </div>

        <div class="divTableCell">@Html.TextBoxFor(m => @Model.HR_Diagnosis, new {@class = "form-control"})</div>
        <div class="divTableCell">@Html.TextBoxFor(m => @Model.HR_Treatment, new { @class = "form-control" })</div>
        <div class="divTableCell">
            <button type="button" class="btn btn-danger removeItem btn-circle MedicalAccess" id="@formID" name="@formID" data-bind="@formID"><i class="fa fa-times"></i> </button>
        </div>
    </div>
    <script type="text/javascript">

        $(document).ready(function () {
            $("#@formID .removeItem").click(function () {
                $("#" + $(this).data().bind).remove();
            });
        });
    </script>
}
