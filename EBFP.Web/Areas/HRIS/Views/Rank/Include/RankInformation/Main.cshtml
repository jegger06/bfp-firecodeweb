@model EBFP.BL.HumanResources.RankModel
<div class="col-sm-12">
    <div class="panel panel-info">
        <a href="#" data-perform="panel-collapse">
            <div class="panel-heading">
               RANK INFORMATION
                <div class="pull-left">
                    <a href="#" data-perform="panel-collapse"><i class="ti-minus"></i>&nbsp;&nbsp;</a>
                </div>
            </div>
        </a>
        <div class="panel-wrapper collapse in" aria-expanded="true">
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-6 col-xs-12">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label class="col-md-3 control-label">NSCB</label>
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.Rank_Name, new { @maxlength = "50", @class = "form-control", @required = "required" })
                                    @Html.ValidationMessageFor(model => model.Rank_Name, "Field is required.", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">DBM Authorized</label>
                                <div class="col-md-6">
                                  @Html.TextBoxFor(model => model.Rank_DBM_Authorized, new {@class = "form-control", @id = "txtRankAutorized", @oninput = "onInputTextNumber(this)"})
                                    @Html.ValidationMessageFor(model => model.Rank_DBM_Authorized, "Field is required.", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/Areas/Common/helper.js")"></script>