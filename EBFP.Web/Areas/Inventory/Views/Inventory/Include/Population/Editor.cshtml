
@using MVC.Series.Web.Extensions
@model EBFP.BL.Inventory.PopulationModel
@using EBFP.BL.Helper;
@using (Html.BeginCollectionItem("PopulationList"))
{
    string formID = "Population_" + Guid.NewGuid().ToString().Replace("-", "");
    <div class="divTableRow" id="@formID">
        @Html.HiddenFor(m => @Model.Population_Municipality_Id, new { @class = "form-control" })
        @Html.HiddenFor(m => @Model.Population_Id, new { @class = "form-control" })
        <div class="divTableCell">
            @Html.TextBoxFor(model => Model.Population_Year, new { @class = "form-control" })
        </div>
        <div class="divTableCell">
            @Html.TextBoxFor(model => Model.sPopulation_Count, new { @class = "form-control", @onblur = "toThousandSeparatorFormat(this)", @id = "txtPopulationEditor_" + Model.count })
        </div>
        <div class="divTableCell">
            <button type="button" class="btn btn-danger removeItem btn-circle" id="@formID" name="@formID" data-bind="@formID"><i class="fa fa-times"></i> </button>
        </div>
        

    </div>
    <script type="text/javascript">

        $(document).ready(function () {
            $("#@formID .removeItem").click(function () {
                $("#" + $(this).data().bind).remove();
            });
        });
    </script>
}
