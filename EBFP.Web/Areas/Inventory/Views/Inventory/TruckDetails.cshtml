    var imgSrcLeft = Model.Truck_LeftView != null ? String.Format("../Content/MISC/Images/{0}/{1}/{2}/{3}", Model.Municipality_Name, Model.Truck_UnitId, "Truck", Model.Truck_LeftView) : "";
